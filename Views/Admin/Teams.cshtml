@model IEnumerable<CIS_560_Final_Project.Models.Teams>

@{
    if (ViewBag.search == true)
    {
        ViewData["Title"] = "Teams - " + ViewBag.sname;

    }
    else
    {
        ViewData["Title"] = "Teams";

    }
}

@if (ViewBag.search == true){<h2>@ViewBag.tname - Teams</h2>}
@if (ViewBag.search != true){<h2>Teams</h2>}

<p>
    @if (ViewBag.search == true){<a asp-action="CreateTeam" asp-route-tid="@ViewBag.tid">Create New</a>}
    @if (ViewBag.search != true){<a asp-action="CreateTeam">Create New</a>}
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            @if (ViewBag.search != true)
            {
                <th>
                    @Html.DisplayNameFor(model => model.School)
                </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                <a asp-action="TeamDetails" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.name)
            </td>
            @if (ViewBag.search != true)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.School.Name)
                </td>
            }
            <td>
                @if (ViewBag.search == true){<a asp-action="EditTeam" asp-route-id="@item.ID" asp-route-tid="@ViewBag.tid">Edit</a>}
                @if (ViewBag.search != true){<a asp-action="EditTeam" asp-route-id="@item.ID">Edit</a>} |
                @if (ViewBag.search == true){<a asp-action="DeleteTeam" asp-route-id="@item.ID" asp-route-tid="@ViewBag.tid">Delete</a>}
                @if (ViewBag.search != true){<a asp-action="DeleteTeam" asp-route-id="@item.ID">Delete</a>}
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    @if (ViewBag.search == true){<a asp-action="Teams" asp-route-id="">View All Teams</a><br />}
    <a asp-action="Schools">Back To Schools</a>
</div>
