@model CIS_560_Final_Project.Models.Teams

@{
    ViewData["Title"] = "Delete Team";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this team?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Game)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.School)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.School.Name)
        </dd>
    </dl>
    
    <form asp-action="DeleteTeam" asp-route-tid="@ViewBag.tid">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @if(ViewBag.tid == -1) {<a asp-action="Teams">Back to List</a> }
        @if(ViewBag.tid != -1) {<a asp-action="Teams" asp-route-id="@ViewBag.tid">Back to List</a> }
    </form>
</div>
