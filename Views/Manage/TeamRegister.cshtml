@model TeamViewModel
@{
    ViewData["Title"] = "Team Register";
}

<h2>Register Team</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TeamRegister">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Schools" class="control-label">Game</label>
                <select asp-for="Schools" class="form-control" asp-items="@ViewBag.SchoolsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Games" class="control-label">Game</label>
                <select asp-for="Games" class="form-control" asp-items="ViewBag.GamesID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

